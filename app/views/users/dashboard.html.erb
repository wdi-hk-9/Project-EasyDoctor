
<div id="user-dashboard">
  <div class="row">
    <button id="add-appt"class="btn btn-primary col-xs-6">Make Appointment</button>
    <button id="show-appt"class="btn btn-primary col-xs-6">Confirmed Appointments</button>
  </div>


  <div id="make-appointment">
    <h1>Welcome, <%= current_user.name %></h1>
    <p>Make an appointment</p>

    <%= form_for :appointment, html: {id: "send-request-form"} do |f| %>

      <select name="doctors" id="doctor-selection">
        <% @doctors.each do |doctor| %>
          <option value="<%= doctor.id %>"><%= doctor.name %></option>
        <% end %>
      </select>

      <div id="datepicker"></div>

      <select name="timeslot" id="timeslot">
        <option value="0">10:00-10:30</option>
        <option value="1">10:30-11:00</option>
        <option value="2">11:00-11:30</option>
        <option value="3">11:30-12:00</option>

        <option value="8">14:00-14:30</option>
        <option value="9">14:30-15:00</option>
        <option value="10">15:00-15:30</option>
        <option value="11">15:30-16:00</option>
        <option value="12">16:00-16:30</option>
        <option value="13">16:30-17:00</option>
      </select>

      <%= f.submit "Send Request" %>
    <% end %>

  </div>

  <div id="confirmed-appointments">
    <h1>My Appointments</h1>
    <table>My Appointments</table>
      <thead>
        <tr>Date</tr>
        <tr>Time</tr>
        <tr>Doctor</tr>
        <tr>Status</tr>
      </thead>
      <tbody>
<!--         <!%= @appointment.each do |f| %>
          <tr><!%=f.date%></tr>
          <tr><!%=f.time%></tr>
        <!%end%> -->
      </tbody>
  </div>
</div>

